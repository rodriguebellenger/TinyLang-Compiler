PROGRAM := STATEMENT*

STATEMENT := ASSIGNEMENT | IF_STATEMENT | WHILE_STATEMENT | FUNC_STATEMENT | PRINT_STATEMENT

ASSIGNEMENT := IDENTIFIER "=" MATH_EXPRESSION
PRINT_STATEMENT := "print" MATH_EXPRESSION
IF_STATEMENT := "if" BOOL_EXPRESSION BLOCK "end"
WHILE_STATEMENT := "while" BOOL_EXPRESSION BLOCK "end"
FUNC_STATEMENT := "func" IDENTIFIER BLOCK "end"

BLOCK := STATEMENT*

MATH_EXPRESSION := TERM (("+" | "-") TERM)*
BOOL_EXPRESSION := MATH_EXPRESSION COMPARISON MATH_EXPRESSION

COMPARISON := ">" | "<" | ">=" | "<=" | "==" | "!="
TERM := IDENTIFIER | NUMBER